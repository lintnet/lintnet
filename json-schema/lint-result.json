{
   "$schema": "https://json-schema.org/draft/2020-12/schema",
   "description": "results",
   "items": {
      "additionalProperties": false,
      "description": "result",
      "properties": {
         "custom": {
            "description": "Custom fields that users can set freely",
            "type": "object"
         },
         "description": {
            "description": "rule description",
            "type": "string"
         },
         "excluded": {
            "description": "Whether the result is excluded",
            "type": "boolean"
         },
         "level": {
            "description": "error level",
            "enum": [
               "debug",
               "info",
               "warn",
               "error"
            ],
            "type": "string"
         },
         "links": {
            "oneOf": [
               {
                  "additionalProperties": {
                     "description": "link",
                     "type": "string"
                  },
                  "description": "each key is a link title",
                  "type": "object"
               },
               {
                  "items": {
                     "oneOf": [
                        {
                           "description": "link",
                           "type": "string"
                        },
                        {
                           "additionalProperties": false,
                           "description": "result",
                           "properties": {
                              "link": {
                                 "description": "link",
                                 "type": "string"
                              },
                              "title": {
                                 "description": "link title",
                                 "type": "string"
                              }
                           },
                           "required": [
                              "link"
                           ],
                           "type": "object"
                        }
                     ]
                  },
                  "type": "array"
               }
            ]
         },
         "location": {
            "description": "Location where errors occur",
            "type": "object"
         },
         "message": {
            "description": "error message",
            "type": "string"
         },
         "name": {
            "description": "rule name",
            "type": "string"
         }
      },
      "required": [
         "name"
      ],
      "type": "object"
   },
   "type": "array"
}
